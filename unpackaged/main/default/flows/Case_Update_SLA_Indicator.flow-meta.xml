                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_and_update_field.Support_Service_Credit_Priorities__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Contract_Applicable</targetReference>
            </connector>
            <label>SC Priority Match</label>
        </rules>
    </decisions>
