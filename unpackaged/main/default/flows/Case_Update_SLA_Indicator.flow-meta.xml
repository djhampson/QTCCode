    <decisions>
        <name>Check_Contract_Status</name>
        <label>Check Contract Status</label>
        <locationX>977</locationX>
        <locationY>231</locationY>
        <defaultConnector>
            <targetReference>Contract_Not_Applicable</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Expired or Terminated</defaultConnectorLabel>
        <rules>
            <name>Not_Expired_or_Terminated</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Check_and_update_field.Status</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Expired</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_and_update_field.Status</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Terminated</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Check_SLA_Product</targetReference>
            </connector>
            <label>Not Expired or Terminated</label>
        </rules>
    </decisions>
    <decisions>
        <name>Check_Service_Credit_Products</name>
        <label>Check Service Credit Products</label>
        <locationX>1265</locationX>
        <locationY>459</locationY>
        <defaultConnector>
            <targetReference>Contract_Not_Applicable</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No SC / No Product Match</defaultConnectorLabel>
        <rules>
            <name>SC_Product_Match</name>
            <conditionLogic>(1 OR 2) AND (3 OR 4)</conditionLogic>
            <conditions>
                <leftValueReference>Check_and_update_field.Support_Service_Credit_Products__c</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <elementReference>var_ProductAffected</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_and_update_field.Support_Service_Credit_Products__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_and_update_field.Service_Credit__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Yes</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_and_update_field.Service_Credit__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Yes - High Risk</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Service_Credit_Priorities</targetReference>
            </connector>
            <label>SC Product Match</label>
        </rules>
    </decisions>
    <decisions>
        <name>Check_SLA_Product</name>
        <label>Check SLA Product</label>
        <locationX>1267</locationX>
        <locationY>228</locationY>
        <defaultConnector>
            <targetReference>Check_Service_Credit_Products</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No SLA Reporting / No Product Match</defaultConnectorLabel>
        <rules>
            <name>SLA_Product_Match</name>
            <conditionLogic>(1 OR 2) AND 3</conditionLogic>
            <conditions>
                <leftValueReference>Check_and_update_field.Support_SLA_Reporting_Products__c</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <elementReference>var_ProductAffected</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_and_update_field.Support_SLA_Reporting_Products__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Check_and_update_field.SLA_Reporting_Obligation__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Yes</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Contract_Applicable</targetReference>
            </connector>
            <label>SLA Product Match</label>
        </rules>
    </decisions>
    <decisions>
        <name>Determine_Case_Update</name>
        <label>Determine Case Update</label>
        <locationX>552</locationX>
        <locationY>319</locationY>
        <defaultConnector>
            <targetReference>Case_SLA_to_False</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No contracts apply</defaultConnectorLabel>
        <rules>
            <name>One_or_more_contracts_apply</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>var_ContractsResult</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>Yes</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Case_SLA_to_True</targetReference>
            </connector>
            <label>One or more contracts apply</label>
        </rules>
    </decisions>
    <decisions>
        <name>Service_Credit_Priorities</name>
