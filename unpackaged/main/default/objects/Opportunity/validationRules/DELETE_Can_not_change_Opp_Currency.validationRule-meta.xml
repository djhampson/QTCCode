<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>DELETE_Can_not_change_Opp_Currency</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
NOT(ISNEW()),
Ischanged( CurrencyIsoCode )
)</errorConditionFormula>
    <errorDisplayField>CurrencyIsoCode</errorDisplayField>
    <errorMessage>Overwrite the currency on the account, to create a new opportunity with the relevant currency.</errorMessage>
</ValidationRule>
