<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>This permission set prevents users from switching back to Classic Interface</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Lightning - Prevents users from Switching to Classic</label>
    <userPermissions>
        <enabled>true</enabled>
        <name>LightningConsoleAllowedForUser</name>
    </userPermissions>
    <userPermissions>
        <enabled>true</enabled>
        <name>LightningExperienceUser</name>
    </userPermissions>
    <userPermissions>
        <enabled>true</enabled>
        <name>PreventClassicExperience</name>
    </userPermissions>
</PermissionSet>
