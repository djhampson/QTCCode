<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Reference_Customer__c</field>
        <field>Request_Status__c</field>
        <field>Priority__c</field>
        <field>Type__c</field>
        <field>Opportunity__c</field>
        <field>Approximate_Date__c</field>
        <field>Customer_Story__c</field>
        <field>Referee_Level__c</field>
        <field>Name</field>
        <field>Details__c</field>
        <field>Story_Owner__c</field>
        <field>CreatedBy</field>
        <field>LastModifiedBy</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Reference_Request</name>
                <type>Task</type>
            </action>
            <action>
                <name>Reference_Request_Approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>natalie_campbell@technologyonecorp.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Reference request approval</description>
        <label>Reference request approval</label>
        <name>Reference_request_approval</name>
        <rejectionActions>
            <action>
                <name>Reference_Request_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Reference_Request_Approval_Process</description>
    <emailTemplate>Sales_Template/Reference_Request_Submitted</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>(Customer_Story__r.Limit_contact_number__c &gt;    Customer_Story__r.Approved_Request_Counter__c)
&amp;&amp;  NOT(ISPICKVAL(Request_Status__c , &#39;Approved&#39;))</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Update_Request_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Update_Request_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Reference_Request_Submitted</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Request_Status_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Reference Request Approval Process</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Update_Request_Status_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
